@model CNPM_Quanlybanxedap.Models.NHACUNGCAP

@{
    ViewBag.Title = "EditProvider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 0;
    }

    .btn-save {
        background-color: #007bff;
        color: #fff;
        border-color: #007bff;
    }

    .btn-save:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .form-group {
        margin-bottom: 2rem;
    }

    .title {
        margin-bottom: 1.5rem;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4 class="title">Chỉnh sửa thông tin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row form-group">
            <label class="col-md-2 col-form-label form-label">Mã Nhà Cung Cấp</label>
            <div class="col-md-10" style="margin-top:7px">
                @Html.DisplayFor(model => model.MaNCC, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label form-label">Tên Nhà Cung Cấp</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label form-label">Địa Chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label form-label">Số Điện Thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label form-label">Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <label class="col-md-2 col-form-label form-label">Thông Tin Mô Tả</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThongTinMoTa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ThongTinMoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Lưu" class="btn btn-save" />
            </div>
        </div>
    </div>
}
