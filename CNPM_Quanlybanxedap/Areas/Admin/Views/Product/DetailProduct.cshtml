@model CNPM_Quanlybanxedap.Models.XE

@{
    ViewBag.Title = "DetailProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    .product-label {
        font-weight: bold;
    }

    .product-image {
        max-width: 200px;
        max-height: 200px;
    }

    /* CSS cho form */
    .product-form {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        padding: 20px;
        border-radius: 6px;
    }

        .product-form .form-group label {
            font-weight: bold;
            margin-bottom: 0; /* Loại bỏ khoảng cách dưới của label */
        }

        .product-form .form-group .col-form-label {
            padding-top: 0; /* Loại bỏ khoảng cách trên của label */
        }

        .product-form .form-control {
            border-radius: 4px;
        }

        .product-form .btn-primary {
            margin-top: 10px;
        }
</style>

<div class="container mt-4 mb-4">
    <h2 class="text-center">Detail Product</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="text-center">
                        @if (!string.IsNullOrEmpty(Model.HinhAnh))
                        {
                            <img src="@Model.HinhAnh" class="product-image img-thumbnail mb-3" alt="Hình ảnh" />
                        }
                    </div>
                    <div class="product-form">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Mã Xe:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.MaXe)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Tên Xe:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.TenXe)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Mô Tả:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.MoTa)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Giá Bán:</label>
                            <div class="col-sm-8">
                                @{
                                    string formattedPrice = string.Format("{0:N0} đ", Model.GiaBan);
                                }
                                <span>@formattedPrice</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Xuất Xứ:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.XuatXu)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Màu Sắc:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.MauSac)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">CĐ Bảo Hành:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.CDBaoHanh)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Mã NCC:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.MaNCC)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label product-label">Tên NCC:</label>
                            <div class="col-sm-8">
                                @Html.DisplayFor(model => model.TenNCC)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                @Html.ActionLink("Chỉnh Sửa", "EditProduct", new { id = Model.MaXe }, new { @class = "btn btn-primary btn-xl" })
            </div>
        </div>
    </div>
</div>
